{% comment %}
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-7xl mx-auto px-4 py-12 bg-gray-100">

    <!-- Blog Card -->
    <div class="relative rounded-2xl overflow-hidden shadow-lg group">
      <img src="your-image-url-1.jpg" alt="Blog image" class="w-full h-72 object-cover">
      <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/50 to-transparent p-6 flex flex-col justify-end">
        <div class="text-sm text-white opacity-80 flex items-center gap-2">
          <span>Mar 16, 2020</span>
          <span>â€¢</span>
          <img src="https://i.pravatar.cc/24?img=1" alt="Michael Foster" class="w-6 h-6 rounded-full">
          <span>Michael Foster</span>
        </div>
        <h2 class="text-white text-lg font-semibold mt-2">
          Boost your conversion rate
        </h2>
      </div>
    </div>

  </div>
{% endcomment %}

<div class="py-8">
  {% paginate blog.articles by section.settings.number_of_blog_post %}
    <h1 class="text-center text-3xl">
      {{ blog.title }}
    </h1>
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {% for article in blog.articles %}
          <div class="w-full py-6 px-3">
            <div class="bg-white shadow-xl rounded-lg overflow-hidden">
              {% if article.image %}
                <a href="{{ article.url }}">
                  <img
                    class="w-full h-80 object-cover"
                    src="{{ article.image | image_url }}"
                    width="200"
                    height="200"
                    alt="{{ article.image.alt }}"
                  >
                </a>
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'w-full h-80 object-cover bg-gray-100' }}
              {% endif %}
              <div class="p-4">
                <h1 class="text-xl font-medium my-4">{{ article.title }}</h1>

                {% if article.excerpt.size > 0 %}
                  <p>{{ article.content | strip_html | truncatewords: 15 }}</p>
                {% else %}
                  <p>{{ article.content | strip_html | truncatewords: 15 }}</p>
                {% endif %}

                <a href="{{ article.url }}" class="font-medium text-blue-600 hover:text-blue-800 my-4 block">
                  {{ section.settings.blog_read_more }}
                </a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>

    <div class="max-w-6xl mx-auto">
      {% render 'pagination', pagination: paginate %}
    </div>
  {% endpaginate %}
</div>

{% schema %}
{
  "name": "Blog",
  "settings": [
    {
      "type": "text",
      "id": "blog_read_more",
      "label": "Read more label",
      "default": "Read more"
    },
    {
      "type": "range",
      "id": "number_of_blog_post",
      "step": 1,
      "min": 1,
      "max": 6,
      "label": "Blog post per range",
      "default": 3
    }
  ]
}
{% endschema %}
